<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_parkName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="国际大厦停车场"
            android:textColor="@color/black"
            android:textSize="@dimen/text22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:layout_marginTop="3dp"
                android:text="大连市国际大厦F1楼"
                android:textColor="@color/grey"
                android:textSize="@dimen/text15sp" />

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:text="距离20米"
                android:textColor="@color/grey"
                android:textSize="@dimen/text15sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="余位"
                android:textColor="@color/grey"
                android:textSize="@dimen/text17sp" />

            <TextView
                android:id="@+id/tv_vacancy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="30"
                android:textColor="@color/green"
                android:textSize="@dimen/text20sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_rates"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="5/h"
        android:textColor="@color/orange"
        android:textSize="@dimen/text25sp"
        android:textStyle="bold" />

</LinearLayout>